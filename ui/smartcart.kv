#:kivy 2.0.0
#:import Factory kivy.factory.Factory

<CartScreen>:
    BoxLayout:
        orientation: 'vertical'
        
        # Top section - Running total and connection status
        BoxLayout:
            size_hint_y: None
            height: '48dp'
            
            Label:
                id: total_label
                text: 'Total: $0.00'
                font_size: 32
                size_hint_x: 0.8
                
            Label:
                id: connection_status
                text: ''
                size_hint_x: 0.2
                color: 1, 1, 1, 1
                canvas.before:
                    Color:
                        rgba: [0.2, 0.7, 0.2, 1] if self.text == 'Online' else [0.7, 0.2, 0.2, 1] if self.text == 'Offline' else [0, 0, 0, 0]
                    Rectangle:
                        pos: self.pos
                        size: self.size
            
        # Middle section - Scrollable list of items
        ScrollView:
            GridLayout:
                id: item_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
        
        # Bottom section - Buttons
        BoxLayout:
            size_hint_y: None
            height: '48dp'
            
            Button:
                text: 'Scan Item'
                on_press: app.scan_item()
                
            Button:
                text: 'Checkout'
                on_press: app.checkout()
        
        # Sensor data overlay
        Label:
            id: sensor_label
            text: 'Distance: 0.0 cm | Weight: 0.0 kg'
            size_hint: 1.0, 0.1
            font_size: '16sp'

<ItemWidget>:
    orientation: 'horizontal'
    size_hint_y: None
    height: 40
    
    Label:
        text: f"{root.item_name} - ${root.item_price:.2f}"
        size_hint: 0.8, 1.0
        halign: 'left'
        text_size: self.width, None
        font_size: '16sp'
        
    Button:
        text: 'X'
        size_hint: 0.2, 1.0
        background_color: 1, 0.5, 0.5, 1
        on_press: app.root.remove_item(root.item_id)